<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/movie"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ed_18"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="18+"
            android:textColor="@color/white"
            android:background="@drawable/text_shape"
            android:gravity="center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp">

        </TextView>
        <TextView
            android:id="@+id/ed_action"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Action"
            android:textColor="@color/white"
            android:background="@drawable/text_shape"
            android:gravity="center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/ed_18"

            >

        </TextView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/st"
            android:id="@+id/img_st"
            android:layout_marginTop="20dp"
            android:layout_marginRight="1dp"
            android:layout_toRightOf="@+id/ed_action"
            android:background="@drawable/text_shape"

            >

        </ImageView>
        <TextView
            android:id="@+id/ed_5.0"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="5.0"
            android:textColor="@color/white"
            android:background="@drawable/text_shape"
            android:gravity="center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/ed_action">

        </TextView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/plus1"
            android:id="@+id/img_plus"
            android:layout_marginTop="20dp"
            android:layout_marginRight="1dp"
            android:layout_toRightOf="@+id/ed_5.0"
            android:layout_marginLeft="30dp"
            >

        </ImageView>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/send3"
            android:id="@+id/img_send3"
            android:layout_marginTop="20dp"
            android:layout_marginRight="1dp"
            android:layout_toRightOf="@+id/img_plus"
            android:layout_marginLeft="10dp"
            >
        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Angel Has Fallen"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ed_longtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mike Banning is framed for the attemlted assassion of the President and must evade his own agency and the Fbi as he tries to uncover the real threat.After the event in the previous flim,Secret service...  "
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">

        </TextView>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actor"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:textStyle="bold"

            android:layout_marginLeft="20dp"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_at4"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/ac4"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            >

        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_act2"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/actor1"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_at4"
            android:scaleType="centerCrop"
            >

        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_at3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/actor2"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_act2"
            android:scaleType="centerCrop"
            >

        </ImageView>

    </LinearLayout>


</LinearLayout>